<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section  name="log4net" type="log4net.log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <log4net>
    <appender name="InfoRollingFile" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="log/info/"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyy-MM&quot;.log&quot;"/>
      <staticLogFileName  value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy年MM月dd日 HH时mm分ss秒} %message%newline%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO"/>
        <levelMax value="INFO"/>
      </filter>
    </appender>
    <appender name="ErrorRollingFile" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="log/error/"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyy-MM&quot;.log&quot;"/>
      <staticLogFileName  value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy年MM月dd日 HH时mm分ss秒} %message%newline%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
    <logger name="logger"  additivity="false">
      <level value="ALL"/>
      <appender-ref ref="InfoRollingFile"/>
      <appender-ref ref="ErrorRollingFile"/>
    </logger>
  </log4net>
  
  <appSettings>
    <add key="ConnectionString" value="Integrated Security=SSPI;Persist Security Info=False;Initial Catalog=heima;Data Source=."/>
    <add key="DBName" value="heima"/>
    <add key="Dirs" value="action\xinnian\images;cct_member\images;cct_member\uploadfiles;cct_member\uploadproduct;heima_member\images;heima_member\uploadfiles;heima_member\uploadproduct;images;img;log;upfile;uploadfiles"/>
    <add key="BaseDir" value="C:\website\xiaoheima\"/>
    <add key="BackTo" value="D:\BackUp\"/>
  </appSettings>
  
  
</configuration>